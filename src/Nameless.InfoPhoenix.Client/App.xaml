<Application x:Class="Nameless.InfoPhoenix.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:Nameless.InfoPhoenix.Application.Converters;assembly=Nameless.InfoPhoenix.Application">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="pack://application:,,,/Resources/ValidationResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:DateTimeToStringValueConverter x:Key="DateTimeToStringValueConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
